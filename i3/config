# auto-lock screen after 5 minutes
#exec --no-startup-id /usr/local/bin/locker -time 5 &

# lock screen with i3lock (xset command will really put the screen to standby instead of just turn screen black)
bindsym $mod+Ctrl+l exec --no-startup-id "i3lock -c 000000 && xset dpms force off"

