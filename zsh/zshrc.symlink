##########
# docker #
##########
# aliases and functions
# remove all containers, including their volumes
dkrmp() { docker rm -v $(docker ps -q -a); }

# remove all images
dkrmi() { docker rmi $(docker images -q); }

# remove all images and containers, i.e. both dkrmp and dkrmi
dkrma() { dkrmp; dkrmi; }

